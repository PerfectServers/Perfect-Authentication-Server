{{>header}}
<div class="row" style="margin-top: 100px;">
	<div class="col thirteen last push_three">

	<h2 class="mb">System Setup</h2>

    <div class="error mb">This is a one-time setup process, made visible because there is no admin user.</div>

	<form action="/setup" method="POST">

		<div class="row">

			<div class="col six first">
				<div class="row">
					<label class="mt hmb">First Name:</label>
					<div class="col thirteen first">
						<input type="text" name="firstname" class="hpl" value="{{firstname}}" required>
					</div>
				</div>


				<div class="row">
					<label class="mt hmb">Last Name:</label>
					<div class="col thirteen first">
						<input type="text" name="lastname" class="hpl" value="{{lastname}}" required>
					</div>
				</div>

				<div class="row">
					<label class="mt hmb">Email:</label>
					<div class="col thirteen first">
						<input type="text" name="email" class="hpl" value="{{email}}" required>
					</div>
				</div>


			</div>
			<div class="col six last">

				<div class="row">
					<label class="mt hmb">Username:</label>
					<div class="col thirteen first">
						<input type="text" name="username" class="hpl" value="{{username}}" required>
					</div>
				</div>

				<div class="row">
					<label class="mt hmb">Password:</label>
					<div class="col thirteen first">
						<input type="password" name="pw" class="hpl" value="" id="pw1" required>
							</div>
				</div>

				<div class="row">
					<label class="mt hmb">Repeat Password:</label>
					<div class="col thirteen first">
						<input type="password" name="pw2" class="hpl" value="" id="pw2" required>
							</div>
				</div>
			</div>
		</div>


		<input type="hidden" name="_csrf" value="{{csrfToken}}">
		<button type="submit" class="dmt">Complete Setup</button>
		<a href="/" class="button">Cancel</a>
	</form>

	</div>
</div>
{{>footer}}
